<h1>Listing routines</h1>

<table>
  <tr>
    <th>Day</th>
    <th>Start time</th>
    <th>End time</th>
    <th>Sub name</th>
    <th>Teacher name</th>
    <th>Faculty</th>
    <th>Year</th>
    <th>Section</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @routines.each do |routine| %>
  <tr>
    <td><%= routine.day %></td>
    <td><%= routine.start_time.strftime('%H:%M')  %></td>
    <td><%= routine.end_time.strftime('%H:%M')  %></td>
    <td><%= routine.sub_name %></td>
    <td><%= routine.teacher_name %></td>
    <td><%= routine.faculty %></td>
    <td><%= routine.year %></td>
    <td><%= routine.section %></td>
    <td><%= link_to 'Show', routine %></td>
    <td><%= link_to 'Edit', edit_routine_path(routine) %></td>
    <td><%= link_to 'Destroy', routine, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

